pipeline {
    agent any
    tools {
	  maven 'Maven 3.9.6'
	}
    stages {
        stage('git clone') {
            steps {
                git credentialsId: 'git', url: 'https://github.com/ksrepo9/ks.git'
            }
			}
        stage('list') {
            steps {
                sh 'ls -l'
            }
			}
        stage('validate') {
            steps {
                sh 'mvn validate'
            }
			}
		stage('compile') {
            steps {
                sh 'mvn compile'
            }
			}
		stage('test') {
            steps {
                sh 'mvn test'
            }
			}
			
        }
    }
